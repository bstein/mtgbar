<Window 
    x:Class="GathererExtractorDataScrubber.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="350" Width="525"
    Title="Gatherer Extractor Data Scrubber">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button 
            Grid.Row="0"
            Click="Button_Click"
            Content="LES GO" />
        <CheckBox
            x:Name="cbGathererExtractor"
            Grid.Row="1"
            Content="Convert GathererExtractor data to non-stupid format"
            IsChecked="True"
            Margin="0,12,0,0"
            VerticalAlignment="Center" />
    </Grid>
</Window>
